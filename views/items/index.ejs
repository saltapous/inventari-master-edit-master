<% layout('layouts/boilerplate')%>
    <h1>Tots els Items</h1>
    <div>
        <a href="/items/new">Afegeix Item</a>
    </div>

    <% for (let item of items){%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" alt="" src="<%=item.imatge%>">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= item.nom %></h5>

                        <p class="card-text"><%= item.unitat %></p>
<p class="card-text"><%= item.descripcio %></p>
                        <p class="card-text">
                        <small class="text-muted"><%= item.username %></small>
                        </p>
                        <a class="btn btn-primary" href="/items/<%=item.id%>">Veure <%=item.nom%> </a>
                    </div>
                </div>
            </div>
        </div>
        <% }%>