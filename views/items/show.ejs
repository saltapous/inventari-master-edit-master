<% layout('layouts/boilerplate')%>


    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card mb-3">
                    <img src="<%= item.imatge %>" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= item.nom %>
                        </h5>
                        <p class="card-text">
                            <%= item.descripcio %>
                        </p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item text-muted"><b>Responsable: </b>
                            <%= item.responsable.username %> %>
                        </li>
                        <li class="list-group-item text-muted"><b>Zona: </b>
                            <%= item.zona %>
                        </li>
                        <li class="list-group-item text-muted"><b>Planta: </b>
                            <%= item.planta %>
                        </li>
                        <li class="list-group-item text-muted"><b>Àrea: </b>
                            <%= item.area %>
                        </li>
                        <li class="list-group-item text-muted"><b>Unitat: </b>
                            <%= item.unitat %>
                        </li>
                        <li class="list-group-item text-muted"><b>Planta: </b>
                            <%= item.planta %>
                        </li>
                        <li class="list-group-item text-muted"><b>Preu de cost: </b>
                            <%= item.preu %>€
                        </li>
                    </ul>
                    <% if( currentUser && item.responsable.equals(currentUser.id)) { %>
                    <div class="card-body">
                        <a href="/items/<%=item.id%>/edit" class="card-link btn btn-info" class="card-link">Editar
                            Item</a>
                        <form class="d-inline" action="/items/<%=item._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">Esborrar Item</button>
                        </form>
                    </div>
                    <% } %>
                    <div class="card-footer text-muted">
                        <a href="/items">Tots els items</a>
                    </div>
                </div>
            </div>