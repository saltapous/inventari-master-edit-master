<% layout('layouts/boilerplate')%>


    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                
                        <h5 class="card-title">
                            <%= proveidor.nom %>
                        </h5>
                        
                    </div>
                    
                    <% if( currentUser && proveidor.responsable.equals(currentUser.id)) { %>
                    <div class="card-body">
                        <a href="/proveidors/<%=proveidor.id%>/edit" class="card-link btn btn-info" class="card-link">Editar
                            Proveidor</a>
                        <form class="d-inline" action="/proveidors/<%=proveidor._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">Esborrar Proveidor</button>
                        </form>
                    </div>
                    <% } %>
                    <div class="card-footer text-muted">
                        <a href="/proveidors">Totes les proveidors</a>
                    </div>
                </div>
            </div>