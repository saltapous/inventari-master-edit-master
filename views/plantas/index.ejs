<% layout('layouts/boilerplate')%>
    <h1>Totes les Plantes</h1>
    <div>
        <a href="/plantas/new">Afegeix Planta</a>
    </div>

    <% for (let planta of plantas){%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" alt="" src="<%=planta.imatge%>">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= planta.nom %></h5>

                        <p class="card-text"><%= planta.planta %></p>
<p class="card-text"><%= planta.descripcio %></p>
                        <p class="card-text">
                        <small class="text-muted"><%= planta.username %></small>
                        </p>
                        <a class="btn btn-primary" href="/plantas/<%=planta.id%>">Veure <%=planta.nom%> </a>
                    </div>
                </div>
            </div>
        </div>
        <% }%>