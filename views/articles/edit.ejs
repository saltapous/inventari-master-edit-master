<% layout('layouts/boilerplate')%>

    <div class="row">
        <h1 class="text-center">Editar article</h1>
        <div class="col-6 offset-3">
            <form action="/articles/<%=article._id%>?_method=PUT" method="POST"  class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="nom">Nom Article</label>
                    <input class="form-control" type="text" id="nom" name="article[nom]" value="<%=article.nom %>" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="unitat">Ubicació</label>
                    <input class="form-control" type="text" id="unitat" name="article[unitat]" required
                        value="<%= article.unitat%>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="imatge">Imatge Url</label>
                    <input class="form-control" type="text" id="imatge" name="article[imatge]"
                        value="<%= article.imatge%>">
                </div>



                <div class="mb-3">
                    <label class="form-label" for="preu">Preu de cost</label>
                    <div class="input-group">
                        <span class="input-group-text" id="preu-label">€</span>
                        <input type="number" min="0"  step="0.01" class="form-control" name="article[preu]" id="preu"
                            placeholder="0.00" value="<%= article.preu%>" aria-label="preu"
                            aria-describedby="preu-label" required>
                    </div>

                </div>


                <div class="mb-3">
                    <label class="form-label" for="descripcio">Descripció</label>
                    <textarea class="form-control" type="text" id="descripcio" required
                        name="article[descripcio]"><%= article.descripcio%></textarea>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Modifica article</button>
                </div>
            </form>
            <a href="/articles">Tots els Articles</a>
        </div>
    </div>