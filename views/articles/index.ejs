<% layout('layouts/boilerplate')%>
    <h1>Tots els Articles</h1>
    <div>
        <a href="/articles/new">Afegeix Article</a>
    </div>

    <% for (let article of articles){%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" alt="" src="<%=article.imatge%>">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= article.nom %></h5>

                        <p class="card-text"><%= article.unitat %></p>
<p class="card-text"><%= article.descripcio %></p>
                        <p class="card-text">
                        <small class="text-muted"><%= article.username %></small>
                        </p>
                        <a class="btn btn-primary" href="/articles/<%=article.id%>">Veure <%=article.nom%> </a>
                    </div>
                </div>
            </div>
        </div>
        <% }%>